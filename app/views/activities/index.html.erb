<h1>Activity inventory</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Priority</th>
    <th>Deadline</th>
    <th>Description</th>
    <th>Estimated pomodoros</th>
    <th>Comment</th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%=h activity.id %></td>
    <td><%=h activity.priority %></td>
    <td><%=h activity.deadline %></td>
    <td><%=h activity.description %></td>
    <td><%=h activity.estimated_pomodoros %></td>
    <td><%=h activity.comment %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

